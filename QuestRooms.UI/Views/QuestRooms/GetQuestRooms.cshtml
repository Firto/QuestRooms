@model QuestRooms.UI.Controllers.Data<QuestRooms.BLL.DtoModels.QuestRoomDto>

@foreach (var item in Model.data)
{
    <div class="col-12 col-sm-6 col-lg-4">
        <div class="card m-1">
            <img src="http://krd.mir-kvestov.ru/uploads/quests/6878/large/questroom_proklyatie_sary_photo1.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>

                <p class="card-text">Rating</p>
                <a href="#" class="btn btn-primary">More</a>
            </div>
        </div>
    </div>
}

@if (Model.More) {
    @Ajax.ActionLink("More", "GetQuestRooms", new { id = Model.data.Last().ID }, new AjaxOptions
{
    UpdateTargetId = "more",
    InsertionMode = InsertionMode.ReplaceWith
},
new { id = "more", @class = "btn btn-success font-weight-bold", style = "height: calc( 1rem * 1.5 + .750rem); margin: auto auto;" });
}


